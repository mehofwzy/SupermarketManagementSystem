    <!-- Enhanced Breadcrumb -->
    <div class="page-header mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent px-0 mb-0">
                <li class="breadcrumb-item fs-sm">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                        <span class="text-primary">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item fs-sm">
                    <a asp-controller="Products" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-boxes me-2 text-primary"></i>
                        <span class="text-primary">Products</span>
                    </a>
                </li>
                <li class="breadcrumb-item fs-sm active d-flex align-items-center" aria-current="page">
                    <i class="fas fa-edit me-2 text-muted"></i>
                    <span class="text-muted">Edit @Model.Name</span>
                </li>
            </ol>
        </nav>
    </div>



    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Product</h1>
    </div>

    <!-- Form Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Edit Product Information</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row mb-3">
                    <label class="col-md-2 col-form-label">Code *</label>
                    <div class="col-md-10">
                        <input asp-for="Code" class="form-control" required>
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-md-2 col-form-label">Name *</label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-md-2 col-form-label">Price *</label>
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required>
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-md-2 col-form-label">Stock Quantity *</label>
                    <div class="col-md-10">
                        <input asp-for="StockQuantity" type="number" class="form-control" required>
                        <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-success mr-2">
                            <i class="fas fa-save mr-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times mr-2"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}