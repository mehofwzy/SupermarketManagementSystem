            </ol>
        </nav>
    </div> *@

    <!-- Enhanced Breadcrumb -->
    <div class="page-header mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent px-0 mb-0">
                <li class="breadcrumb-item fs-sm">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                        <span class="text-primary">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item fs-sm">
                    <a asp-controller="Bills" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                        <i class="fas fa-file-invoice me-2 text-primary"></i>
                        <span class="text-primary">Bills</span>
                    </a>
                </li>
                <li class="breadcrumb-item fs-sm active d-flex align-items-center" aria-current="page">
                    <i class="fas fa-trash-alt me-2 text-muted"></i>
                    <span class="text-muted">Delete Bill #@Model.BillNumber</span>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-danger">Delete Bill</h1>
    </div>

    <!-- Delete Confirmation Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">Confirm Deletion</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <strong>Warning!</strong> Are you sure you want to permanently delete this bill?
            </div>

            <div class="bill-details">
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <span class="font-weight-bold">Bill Number:</span>
                            <span>@Model.BillNumber</span>
                        </div>
                        <div class="detail-item mb-3">
                            <span class="font-weight-bold">Bill Date:</span>
                            <span>@Model.BillDate?.ToString("yyyy-MM-dd hh:mm tt")</span>
                        </div>
                        <div class="detail-item mb-3">
                            <span class="font-weight-bold">Bill Type:</span>
                            <span class="badge @(Model.BillTypeName == "Sale" ? "badge-success" : "badge-warning")">
                                @Model.BillTypeName
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <span class="font-weight-bold">Client Name:</span>
                            <span>@Model.ClientName</span>
                        </div>
                        <div class="detail-item mb-3">
                            <span class="font-weight-bold">Client Phone:</span>
                            <span>@Model.ClientPhone</span>
                        </div>
                        <div class="detail-item mb-3">
                            <span class="font-weight-bold">Total Amount:</span>
                            <span class="text-success">$@Model.TotalAmount</span>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="form-group text-right">
                    <a asp-action="Index" class="btn btn-secondary mr-2">
                        <i class="fas fa-times mr-2"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt mr-2"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bill-details {
            background-color: #f8f9fa;
            padding: 1.5rem;
            border-radius: 0.35rem;
            border: 1px solid #e3e6f0;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px solid #e3e6f0;
        }

            .detail-item:last-child {
                border-bottom: none;
            }

        .alert-warning {
            border-left: 4px solid #f6c23e;
        }

        .badge-success {
            background-color: #1cc88a;
        }

        .badge-warning {
            background-color: #f6c23e;
        }

        .card-header.bg-danger {
            background-color: #e74a3b !important;
        }

    </style>
}

